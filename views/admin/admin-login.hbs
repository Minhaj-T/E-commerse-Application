	<section class="h-100">
		<div class="container h-100">
			<div class="row justify-content-sm-center h-100">
				<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
					<div class="text-center p-5">
					</div>
					<div class="card shadow-lg ">
						<div class="card-body p-5">
							<h1 class="fs-4 card-title fw-bold mb-4">Admin Login</h1>
							<form method="POST" action="/admin/admin-login" class="needs-validation" novalidate="" id="adminLogin" >
							 {{#if loginErr}}
                                <div class="alert alert-danger" role="alert">
                                       Please Check Your Phone Number and Password
                                       </div>
                                {{/if}}
								<div class="mb-3">
									<label class="mb-2 text-muted" for="email">E-Mail Address</label>
									<input id="email" type="email" class="form-control" name="email" value="" required autofocus>
								</div>

								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="password">Password</label>
									</div>
									<input id="password" type="password" class="form-control" name="password" required>
								</div>

								<div class="d-flex align-items-center">
									<button type="submit" class="btn btn-primary m-auto">
										Login
									</button>
								</div>
							</form>
						</div>
					</div>
					<div class="text-center mt-5 text-muted">
						Copyright &copy; 2022-2025 &mdash; Shop Grids 
					</div>
				</div>
			</div>
		</div>
	</section>