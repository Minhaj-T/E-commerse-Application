<section>
  <div class="container mt-4">
    <div class="row align-items-center justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center">Edit<strong> Product</strong> </h2>
        <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data"
          id="editProductForm">
          <label for=""><b> Name</b> </label>
          <input type="text" name="name" class="form-control" value="{{product.name}}" />
          <label for="category">Category</label>
          <select name="category" class="custom-select p-2">
            <option value="{{product.category}}" selected>{{product.category}}</option>
            {{#each category}}
            <option value="{{this.category}}">{{this.category}}</option>
            {{/each}}
          </select>
          <label for=""><b>Price</b></label><br />
          <input type="tel" name="price" class="form-control" value="{{product.price}}" />
          <br>

          <label for="discription"><b>Discription</b></label>
          <input type="text" name="discription" class="form-control" value="{{product.discription}}" />
          <div class="row">
            <div class="col-12">
              <div id="image-box1" style="width: 500px; height: 500px; display: none;"></div>
              <button class="btn btn-primary  mt-3" type="button" style="display: none;" id="crop-btn1">Crop</button>
            </div>
            <div class="mt-5 col-md-6">
              <label for="">IMAGE 1</label>
              <img src="/product-images/{{product._id}}a.jpg" alt="" style="width: 100px; height:auto" id="imgView1">
              <input type="file" name="image1" id="id_image1" class="form-control" onchange=" fileValidation1(event)"
                accept="image/*">
            </div>

            <div class="mt-5 col-md-6">
              <label for="">IMAGE 2</label>
              <img src="/product-images/{{product._id}}b.jpg" alt="" style="width: 100px; height:auto" id="imgView2">
              <input type="file" name="image2" id="id_image2" class="form-control" onchange=" fileValidation2(event)">
            </div>
            <div class="mt-5 col-md-6">
              <label for="">IMAGE 3</label>
              <img src="/product-images/{{product._id}}c.jpg" alt="" style="width: 100px; height:auto" id="imgView3">
              <input type="file" name="image3" id="id_image3" class="form-control" onchange=" fileValidation3(event)">
            </div>
            <div class="mt-5 col-md-6">
              <label for="">IMAGE 4</label>
              <img src="/product-images/{{product._id}}d.jpg" alt="" style="width: 100px; height:auto" id="imgView4">
              <input type="file" name="image4" id="id_image4" class="form-control" onchange=" fileValidation4(event)">
            </div>
          </div>
          <div class="text-center">
            <input type="submit" class="btn btn-primary  mt-3" value="Edit Product" />
          </div>
        </form>
      </div>
    </div>
  </div>
</section>