<section id="add">
    <div class="container mt-4">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Edit<strong> Banner</strong> </h2>
                <form action="/admin/edit-banner/{{banner._id}}" method="post" enctype="multipart/form-data"
                    id="">
                    <label for="inputName">Banner Name</label>
                    <input type="text" class="form-control" id="inputName" value="{{banner.bannerName}}" name="bannerName">
                    <label for="inputOffer">Offer details</label>
                    <input type="text" class="form-control" id="inputOffer" value="{{banner.offer}}" name="offer">
                    <div class="form-row mt-2">
                        <div class="form-group col-md-6">
                            <label for="inputName">Description 01</label>
                            <input type="text" class="form-control" value="{{banner.description1}}" id="inputDescription1" name="description1">
                        </div>


                        <div class="form-group col-md-6">
                            <label for="inputDescription">Description 02</label>
                            <input type="text" class="form-control" id="inputDescription2" value="{{banner.description2}}" name="description2">
                        </div>
                    </div>

                    

                     <label for="offPrice">Offer price</label>
                    <input type="text" class="form-control" id="offPrice" value="{{banner.offerPrice}}" name="offerPrice">

                   <label for="inputDescription">Button link</label>
                    <input type="text" class="form-control" id="inputDescription" value="{{banner.link}}"
                    name="link">
                    <label for="exampleFormControlFile3">Banner Image</label> <br>
                    <img src="/banners/{{banner._id}}.jpg" style="width:auto;height:100px;" id="imgView3">
                    <br>
                    <br>
                    <input type="file" class="form-control" name="Image3" id="exampleFormControlFile3"
                        style="width: 250px;" accept="image/*" onchange="viewImage3(event)" >
                    <div class="text-center">
                        <input type="submit" class="btn btn-info mt-3" value="Edit" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>