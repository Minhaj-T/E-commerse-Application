<div class="account-login section">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
        <form class="card login-form" action="/user-change-password" method="post" id="userChangePass">
          <div class="card-body">
            <div class="title">
              {{#if notSame}}
              <div class="alert alert-danger" role="alert">
                New passwords must be same
              </div>
              {{/if}}
              {{#if invalid}}
              <div class="alert alert-danger" role="alert">
                Current password is invalid
              </div>
              {{/if}}
            </div>
            <div class="form-group input-group">
              <label for="reg-fn">Current Password</label>
              <input class="form-control" type="password" name="current" id="" />
            </div>
            <div class="form-group input-group">
              <label for="reg-fn">New Password</label>
              <input class="form-control" type="password" name="password1" id="reg-pass" />
            </div>
            <div class="form-group input-group">
              <label for="reg-fn">Confirm Password</label>
              <input class="form-control" type="password" name="password2" id="" />
            </div>
            <div class="button">
              <button class="btn" type="submit">Change</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
