<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/simplePagination.js/1.6/jquery.simplePagination.js'></script><script  src="./script.js"></script>
<style>
    body {
	line-height: 18px;
	background: #f4f4f4;
}

.list-wrapper {
	padding: 15px;
	overflow: hidden;
}

.list-item {
	border: 1px solid #EEE;
	background: #FFF;
	margin-bottom: 10px;
	padding: 10px;
	box-shadow: 0px 0px 10px 0px #EEE;
}

.list-item h4 {
	color: #1e73eb;
	font-size: 18px;
	margin: 0 0 5px;	
}

.list-item p {
	margin: 0;
}

.simple-pagination ul {
	margin: 0 0 20px;
	padding: 0;
	list-style: none;
	text-align: center;
}

.simple-pagination li {
	display: inline-block;
	margin-right: 5px;
}

.simple-pagination li a,
.simple-pagination li span {
	color: #666;
	padding: 5px 10px;
	text-decoration: none;
	border: 1px solid #EEE;
	background-color: #FFF;
	box-shadow: 0px 0px 10px 0px #EEE;
}

.simple-pagination .current {
	color: #FFF;
	background-color: #1e73eb;
	border-color: #1e73eb;
}

.simple-pagination .prev.current,
.simple-pagination .next.current {
	background: #015cdb;
    
    
}
</style>

<section class="blog-section section">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h2>My Orders</h2>
        </div>
      </div>
    </div>
    <div class="row">
      {{#each orders}}
      <div class="col-lg-4 col-md-6 col-12">
        <!-- Start Single Blog -->
        <div class="list-item">
        <div class="single-blog">
          <div class="blog-content">
            {{! <a class="category" href="javascript:void(0)">Gaming</a> }}
            <h4>
              <a href="">Your order {{this.Status}}!</a>
            </h4>
            <p>{{this.deliveryDetails.Name }} You order has been {{this.Status}} !</p>
            <table class="table table-borderless">
              <tr>
                <td>
                  <div class="py-2">
                    <span class="d-block text-muted">Order Date</span>
                    <span>{{this.Time}}</span> <br>
                    <span>{{this.Date}}</span>
                  </div>
                </td>
                <td>
                  <div class="py-2">
                    <span class="d-block text-muted">Order No</span>
                    <span>{{this._id}}</span>
                  </div>
                </td>
              </tr>
            </table>
            <table class="table table-borderless">
              <tr>

                <td>
                  <div class="py-2">
                    <span class="d-block text-muted">Delivery Address</span>
                    <span>{{this.deliveryDetails.Name}}
                      {{this.deliveryDetails.House}},{{this.deliveryDetails.Street}}, <br>
                      {{this.deliveryDetails.Town}},{{this.deliveryDetails.PIN}},{{this.deliveryDetails.Mobile}}
                    </span>
                  </div>
                </td>
                <td>
                </td>
              </tr>
            </table>

            <table class="table table-borderless">
              <tr>
                <td>
                  <div class="py-2">
                    <span class="d-block text-muted">Payment</span>
                    <span>{{this.PaymentMethod}}</span>
                  </div>
                </td>
                <td>
                  <div class="py-2">
                    <span class="d-block text-muted">Order Status</span>
                    <span>{{this.Status}}</span>
                  </div>
                </td>
                <td>
                  <div class="py-2">
                    <div class="text-left">
                      <span class="text-muted" style="font-size: larger;"><strong>Totel</strong></span>
                    </div>
                    <span>â‚¹ {{this.Total}}</span>
                  </div>
                </td>
              </tr>
            </table>
            <div class="row">
              <div class="wish-button">
                {{#if this.Cancelled}}
                <button id="" type="button" class="btn btn-outline-danger p-2">Return</button>
                {{else}}
                <button id="cncl" type="button"
                  onclick="cancelOrder('{{this._id}}','{{this.Total}}','{{this.PaymentMethod}}')"
                  class="btn btn-outline-danger p-2">Calncel</button>
                {{/if}}
                <a class="btn btn-outline-primary p-2" href="/singleOrder/{{this._id}}">view product</a>
              </div>
            </div>
          </div>
        </div>
        <!-- End Single Blog -->
      </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
 <div class="p-3"  id="pagination-container"></div>
<!-- ========================= scroll-top ========================= -->
<a href="#" class="scroll-top">
  <i class="lni lni-chevron-up"></i>
</a>

<script>
    var items = $(" .list-item");
    var numItems = items.length;
    var perPage = 8;

    items.slice(perPage).hide();

    $('#pagination-container').pagination({
        items: numItems,
        itemsOnPage: perPage,
        prevText: "&laquo;",
        nextText: "&raquo;",
        onPageClick: function (pageNumber) {
            var showFrom = perPage * (pageNumber - 1);
            var showTo = showFrom + perPage;
            items.hide().slice(showFrom, showTo).show();
        }
    });
</script>