<section class="hero-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12 custom-padding-right">
                <div class="slider-head">
                    <!-- Start Hero Slider -->
                    <div class="hero-slider">
                        <!-- Start Single Slider -->
                        {{#each banners}}
                        <div class="single-slider" style="background-image: url(/banners/{{this._id}}.jpg);">
                            <div class="content">
                                <h2><span>{{this.description1}}</span>
                                    {{this.bannerName}}
                                </h2>
                                <p>{{this.offer}}</p>
                                <h3><span>Under</span> ₹{{this.offerPrice}}</h3>
                                <div class="button">
                                    <a href="/categoryProducts/{{this.link}}" class="btn">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        <!-- End Single Slider -->
                    </div>
                    <!-- End Hero Slider -->
                </div>
            </div>
            <div class="col-lg-4 col-12">
                <div class="row">
                    <div class="col-lg-12 col-md-6 col-12 md-custom-padding">
                        <!-- Start Small Banner -->
                        <div class="hero-small-banner" style="background-image: url('/images/hero/slider-bnr.jpg');">
                            <div class="content">
                                <h2>
                                    <span>MIN 40% Off</span>
                                    Dazzling Dresses
                                </h2>
                                <h3>₹2999.99</h3>
                            </div>
                        </div>
                        <!-- End Small Banner -->
                    </div>
                    <div class="col-lg-12 col-md-6 col-12">
                        <!-- Start Small Banner -->
                        <div class="hero-small-banner style2">
                            <div class="content">
                                <h2>Weekly Sale!</h2>
                                <p>Saving up to 50% off all online store items this week.</p>
                                <div class="button">
                                    <a class="btn" href="product-grids.html">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <!-- Start Small Banner -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

