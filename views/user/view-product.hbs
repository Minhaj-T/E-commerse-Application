<section class="trending-product section" style="margin-top: 12px;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2>Trending Product</h2>
                    <p>There are many variations of passages of Lorem Ipsum available, but the majority have
                        suffered alteration in some form.</p>
                </div>
            </div>
        </div>
        <div class="row">
            {{#each product}}
            <div class="col-lg-3 col-md-6 col-12">
                <!-- Start Single Product -->
                <div class="single-product ">
                    <div class="product-image">
                        <img src="/product-images/{{this._id}}a.jpg" class="card-img-top" alt="Product image">
                        {{#if this.offer}}
                        <span class="sale-tag">-{{this.proOfferPercentage}}%</span>
                        {{/if}}
                        <div class="button">
                            <a onclick="addToCart('{{this._id}}')" class="btn"><i class="lni lni-cart"></i> Add to
                                Cart</a>
                        </div>
                    </div>
                    <div class="product-info">
                        <span class="category">{{this.category}}</span>
                        <h4 class="title">
                            <a href="/view-singleProduct/{{this._id}}">{{this.name}}</a>
                        </h4>
                        {{!-- <ul class="review">
                            <li><i class="lni lni-star-filled"></i></li>
                            <li><i class="lni lni-star-filled"></i></li>
                            <li><i class="lni lni-star-filled"></i></li>
                            <li><i class="lni lni-star-filled"></i></li>
                            <li><i class="lni lni-star"></i></li>
                            <li><span>4.0 Review(s)</span></li>
                        </ul> --}}
                        {{#if this.offer}}
                        <div class="price">
                            <span>₹{{this.price}}</span>
                            <span class="discount-price">₹{{this.actualPrice}}</span>
                        </div>
                        {{else}}
                        <div class="price">
                            <span>₹{{this.price}}</span>
                        </div>
                        {{/if}}
                    </div>
                </div>
                <!-- End Single Product -->
            </div>
            {{/each}}
        </div>
    </div>
    </div>
</section>



